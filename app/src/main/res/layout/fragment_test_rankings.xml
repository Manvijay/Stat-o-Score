<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manvijay.sports_app.TestRankings">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/scroll2"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:text="Pos"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:text="Team Name"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:text="PG"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:text="W"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:text="D"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:text="L"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:text="Pts"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scroll2"
        android:id="@+id/scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/epltext"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:baselineAligned="false"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/epltext7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
